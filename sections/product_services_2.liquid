{%- capture html -%}
<section class="method-area" id="section-{{ section.id }}">
  <div class="container{% if section.settings.section_width == 'full' %}-fluid{% endif %}">
    <div class="row">
      {%- for block in section.blocks -%}{%- case block.type -%}
      {%- when 'service' -%}
      <div class="col-lg-{{ block.settings.ban_col }} col-md-{{ block.settings.product_column_md }} col-{{ block.settings.product_column_xs }} mb-md--30">
        <div class="method-box{% if section.settings.style == 'style_1' %} text-center{% else %} method-box-2{% endif %}">              
          {%- if block.settings.show_img -%}             
          {%- if block.settings.ban1_img -%}
            {%- render 'lazyload_image_src',
                	  image: block.settings.ban1_img,
                      size: 'medium' -%}
          
          {%- else -%}
          <img data-src="https://cdn.shopify.com/s/files/1/0159/0355/5638/files/icon-1_medium_3ca4cdf7-6cb2-4cea-b511-9eec74e5fc00.png?16033" class="lazyload" alt="Banner">
          {%- endif -%}
          {%- endif -%}

          {%- if block.settings.section_title != '' -%}
          <h4 class="mt--20" style="color: {{ section.settings.section_title_color }};">{{ block.settings.section_title }}</h4>
          {%- endif -%}

          {%- if block.settings.section_sub_title != '' -%}
          <p style="color: {{ section.settings.section_sub_title_color }};">{{ block.settings.section_sub_title }}</p>
          {%- endif -%}
        </div>
      </div>
      {%- endcase -%}{%- endfor -%}
    </div>
  </div>
</section>
{%- endcapture -%}
{{ html | strip_newlines | replace:'	','' | replace:'    ','' | replace:'  ',' ' }}

