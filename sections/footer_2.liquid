<style>
 
  {% for block in section.blocks %} 
  	{% case block.type %}		
      {% when 'footer_typography' %}
         #section-{{ section.id }}.footer {
            background-color: {{ block.settings.footer_bg_color }};
          }
  		  #section-{{ section.id }}.footer.no-bg {
