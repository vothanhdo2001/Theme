{%- capture html -%}
<div id="section-{{ section.id }}" data-section="BannerSection">

  {% if section.settings.masonry_product_section_title %}

  <div class="fashion-home-intro-area mb-100 mb-sm-80 mb-xs-60">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="fashion-home-intro">

            {% if section.settings.masonry_subtitle != blank %}
            <p class="label">{{ section.settings.masonry_subtitle }}</p>
            {% endif %}

            {% if section.settings.masonry_title != blank %}
            <h2 class="title">{{ section.settings.masonry_title }}</h2>
            {% endif %}

            {% if section.settings.masonry_title_desc != blank %}
            <p class="description">{{ section.settings.masonry_title_desc }}</p>
            {% endif %}
			 {% if section.settings.shop_collection_btn_text != blank %}
            <a href="{{ section.settings.shop_collection_btn_link }}" class="phoone-shop-link">{{ section.settings.shop_collection_btn_text }}</a>
            {% endif %}

            {% if section.settings.masorny_opacity_title != blank %}
            <p class="shadow-text">{{ section.settings.masorny_opacity_title }}</p>
            {% endif %}

          </div>
        </div>
      </div>
    </div>
  </div>

  {% endif %}


  <div class="fashion-home-product-area mb-sm-80 mb-xs-60">
    <div class="container">
      <div class="row ">

        {%- assign product_handler = collections[section.settings.product_cat_handle_id] -%}
        {%- assign product_limit = section.settings.product_limit_handle -%}

        {% for product in product_handler.products limit:1 %}
        <div class="col-lg-5 offset-lg-1 col-md-6 mb-100 mb-sm-80 mb-xs-60">
          <div class="single-product single-product--large-size">
            {%- render 'product-grid-item' with product as product -%}
          </div>
        </div>
        {% endfor %}

        {% for product in product_handler.products limit:1 offset: 1 %}
        <div class="col-lg-4 col-md-6 mb-100 mb-sm-80 mb-xs-60">
          <div class="single-product single-product--small-size">
            {%- render 'product-grid-item' with product as product -%}
          </div>
        </div>
        {% endfor %}

        {% for product in product_handler.products limit:1 offset: 2 %}
        <div class="col-lg-4 offset-lg-2 col-md-6 mb-100 mb-sm-80 mb-xs-60">
          <div class="single-product single-product--small-size">
            {%- render 'product-grid-item' with product as product -%}
          </div>
        </div>
        {% endfor %}

        {% for product in product_handler.products limit:1 offset: 3 %}
        <div class="col-lg-5 col-md-6 mb-100 mb-sm-80 mb-xs-60">
          <div class="single-product single-product--large-size">
            {%- render 'product-grid-item' with product as product -%}
          </div>
        </div>
        {% endfor %}
        {% for product in product_handler.products limit:1 %}
        <div class="col-lg-5 offset-lg-1 col-md-6 mb-100 mb-sm-80 mb-xs-60">
          <div class="single-product single-product--large-size">
            {%- render 'product-grid-item' with product as product -%}
          </div>
        </div>
        {% endfor %}

        {% for product in product_handler.products limit:1 offset: 1 %}
        <div class="col-lg-4 col-md-6 mb-100 mb-sm-80 mb-xs-60">
          <div class="single-product single-product--small-size">
            {%- render 'product-grid-item' with product as product -%}
          </div>
        </div>
        {% endfor %}

      </div>


      {% if section.settings.collection_btn %}
      <div class="row">
        <div class="col-lg-12 text-center ">
          <a href="{{ section.settings.collection_btn_link }}" class="phoone-button phoone-button--medium phoone-button--icon--left"> <i class=" ion-{{ section.settings.button_icon }}"></i> {{ section.settings.collection_btn_text | default: 'Shop Store' }}</a>
        </div>
      </div>
      {% endif %}
      
    </div>
  </div>

</div>
{%- endcapture -%}
{{ html | strip_newlines | replace:'	','' | replace:'    ','' | replace:'  ',' ' }}

