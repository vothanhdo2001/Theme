  }
  #section-{{ section.id }} .offcanvas-mobile-search-area input {
    background: {{ block.settings.input_bg_color }};
    color: {{ block.settings.input_text_color }};
  }
  #section-{{ section.id }} .offcanvas-mobile-search-area button {
    color: {{ block.settings.submit_btn_color }};
