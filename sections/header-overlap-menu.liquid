    background-color: {{ block.settings.mobile_hamburger_icon }};
  }
  
  #section-{{ section.id }} .offcanvas-wrapper {
    background-color: {{ block.settings.off_menu_bg_color }};
  }
  #section-{{ section.id }} .offcanvas-navigation > ul > li > a,#section-{{ section.id }} .offcanvas-navigation ul.sub-menu > li > a,
  #section-{{ section.id }} .offcanvas-navigation ul li.menu-item-has-children .menu-expand {
    color: {{ block.settings.off_can_menu_color }};
  }
  #section-{{ section.id }} .offcanvas-navigation > ul > li > a:hover,#section-{{ section.id }} .offcanvas-navigation ul.sub-menu > li > a:hover {
    color: {{ block.settings.off_can_menu_hover_color }};
  }
