{%- capture html -%}
{% assign isset = section.settings  %}
<div class="new_countdown_section"  data-section="CountDownBanner" id="section-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="special_countdown_banner_inner {% if section.settings.text_align == "left" %}text-left {% elsif section.settings.text_align == "right" %} text-right {% elsif section.settings.text_align == "center" %} text-center {% endif %}">
          <div class="special_countdown_header">
            {%- if isset.countdown_title1 -%}
            <h4>{{ isset.countdown_title1 }}</h4>
            {%- endif -%}
            {%- if isset.countdown_title2  -%}
            <h1>{{ isset.countdown_title2 }}</h1>
            {%- endif -%}
          </div>
          <div class="special_countdown" data-countdown3="{{ isset.countdown_timer | default: "2020/01/01" }}"></div>
          {% if isset.countdown_fooetr %}
          <div class="sepcial_countdown_banner_footer">
            <p> {{ isset.countdown_fooetr }} </p>
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- endcapture -%}
{{ html | strip_newlines | replace:'	','' | replace:'    ','' | replace:'  ',' ' }}
