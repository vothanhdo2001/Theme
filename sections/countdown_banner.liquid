{%- capture html -%}
<div class="countdown_section nrb__x_count" data-section="CountDownBanner">
{% if section.settings.section_title_enable %}
<div class="section-title-container mb-40">
  <div class="container">
    <div class="row">
      <div class="col-6">
        {% if section.settings.collection_trend_name != blank %}
        <div class="section-title__label section-title__label-style2 section-title__label--left section-title__label-style3--left">
          <p>{{ section.settings.collection_trend_name }} <span class="line">{{ section.settings.collection_trend_count }}</span></p>
        </div>
        {% endif %}
      </div>

      <div class="col-6 text-right">
        {% if section.settings.collection_banner_subtitle != blank %}
        <div class="section-title__label  section-title__label-style2 section-title__label--right section-title__label-style3--right">
          <p>{{ section.settings.collection_banner_subtitle }}</p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}
  
<div id="section-{{ section.id }}" class="countdown-timer-area {% if section.settings.countdown_banner_type == "style1" %} countdown-background countdown-bg-3 pt-30 pb-30 pb-sm-80 {% endif %} mb-100 mb-md-80 mb-sm-80 ">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide {% endif %}">
    <div class="row">
      
      {%- capture bannerimg -%}
      {%- if section.settings.banner_img != blank -%} {{ section.settings.banner_img | img_url: 'master' }}{%- else -%} https://via.placeholder.com/469x500 {%- endif -%}
      {%- endcapture -%}
    
      
      
      {% if section.settings.countdown_banner_type == "style1" %}
      <div class="col-lg-12">
        <div class="{% if section.settings.row_reverse_enable %} flex-row-reverse {% endif %} row align-items-center">
         {% if section.settings.banner_thumb_enable %}
          <div class="col-lg-4 col-xl-5  {% if section.settings.row_reverse_enable %} mb-md-50 mb-sm-50 mb-xs-50 {% else %} mt-md-50 mt-sm-50 mt-xs-50 {% endif %}">
            <div class="countdown-image text-center">
              {%- if section.settings.banner_img != blank -%}
                {%- render 'lazyload_image_src',
                        image: section.settings.banner_img,
                		size: 'master' -%}
                {%- else -%}
                {%- render 'svg_placholder', param: 'image', size: '469x500' -%}
                {%- endif -%}
            </div>
          </div>
          {% endif %}
          
          <div class="{% if section.settings.banner_thumb_enable %} col-xl-7 col-lg-8 {% endif %} col-12 ">
            <div class="countdown-wrapper {% if section.settings.content_align == "left" %} text-left {% elsif section.settings.content_align == "right" %} text-right {% elsif section.settings.content_align == "center" %} text-center {% endif %}">
              {% if section.settings.banner_title != blank %}
              <h3>{{ section.settings.banner_title }}</h3>
              {% endif %}
              
              {% if section.settings.countdown_timer != blank %}
              <div class="deal-countdown" data-countdown2="{{ section.settings.countdown_timer | default: "2020/01/01" }}"></div>
              {% endif %}
              
              {% if section.settings.banner_btn_text != blank %}
              <a href="{{ section.settings.banner_btn_link }}" class="phoone-button phoone-button--medium phoone-button--icon--left">  {%- if section.settings.icon_enable -%}<i class="icon-left ion-ios-cart"></i> {% endif %}{{ section.settings.banner_btn_text }}</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
       {% elsif section.settings.countdown_banner_type == "style2" %}
      <div class="col-lg-12">
        <div class="countdown-background countdown-bg-1  pt-100 pb-100" style="background-image: url('{% if section.settings.banner_bg_img != blank %} {{ section.settings.banner_bg_img | img_url: 'master' }}{% else %} https://via.placeholder.com/1720x500 {% endif %}');">
          <div class="row">
            <div class=" col-12 col-xl-{{ section.settings.xl_col }} offset-xl-{{ section.settings.xl_offset }} col-lg-{{ section.settings.lg_col }} offset-lg-{{ section.settings.lg_offset }} col-md-{{ section.settings.md_col }} offset-md-{{ section.settings.md_offset }} ">
              <div class="countdown-wrapper {% if section.settings.content_align == "left" %} text-left {% elsif section.settings.content_align == "right" %} text-right {% elsif section.settings.content_align == "center" %} text-center {% endif %}">
                {% if section.settings.banner_title != blank %}
                <h3>{{ section.settings.banner_title }}</h3>
                {% endif %}
                {% if section.settings.countdown_timer != blank %}
                <div class="deal-countdown" data-countdown2="{{ section.settings.countdown_timer | default: "2020/01/01" }}"></div>
                {% endif %}

                {% if section.settings.banner_btn_text != blank %}
                <a href="{{ section.settings.banner_btn_link }}" class="phoone-button phoone-button--medium phoone-button--icon--left">  {%- if section.settings.icon_enable -%}<i class="icon-left ion-ios-cart"></i> {%- endif %}{{ section.settings.banner_btn_text }}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      
      {% elsif section.settings.countdown_banner_type == "style3" %}
      <div class="col-lg-12">
        <div class="countdown-background pt-30 pb-30">
          <div class="row {% if section.settings.row_reverse_enable %} flex-row-reverse {% endif %} align-items-center">
            {% if section.settings.banner_thumb_enable %}
            <div class="col-12 col-xl-5 col-lg-3 {% if section.settings.row_reverse_enable %} mb-md-50 mb-sm-50 mb-xs-50 {% else %} mt-md-50 mt-sm-50 mt-xs-50 {% endif %}">
