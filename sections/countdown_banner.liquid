                {% endif %}
                {% if section.settings.countdown_timer != blank %}
                <div class="deal-countdown" data-countdown2="{{ section.settings.countdown_timer | default: "2020/01/01" }}"></div>
                {% endif %}
                {% if section.settings.banner_btn_text != blank %}
