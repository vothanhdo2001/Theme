{%- style -%}

  {%- for block in section.blocks -%}
  {% case block.type %}
  {%- when 'Banner_color_style' -%}

    #section-{{ section.id }} .banner-1 .banner-title-1 {
    color: {{ block.settings.sub_title_color }};
    }
    #section-{{ section.id }} .banner-1 .banner-title-4 span:first-child{
    color: {{ block.settings.title_color }};
    background: {{ block.settings.title_bg_color }};
    }
    #section-{{ section.id }} .banner-1 .banner-title-4 span:last-child{
    color: {{ block.settings.title_2_color }};
    }
    #section-{{ section.id }} .banner-1 .banner-title-4 {
    border: 3px solid {{ block.settings.title_border_color }};
    }
    #section-{{ section.id }} .banner-1 .banner-title-5{
    color: {{ block.settings.description_color }};
    }
    #section-{{ section.id }} .banner-2 .banner-title-6{
    color: {{ block.settings.sub_title_2_color }};
    } 
    #section-{{ section.id }} .banner-2 .heading-bigger.color--white {
    color: {{ block.settings.title_3_color }}!important;
    }
    #section-{{ section.id }} .banner-2 .banner-title-1 {
    color: {{ block.settings.description_2_color }};
    }
    #section-{{ section.id }} .btn-bordered {
    background: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: 1px solid {{ block.settings.button_border_color }};
    }
    #section-{{ section.id }} .banner-box:hover .btn-style-1 {
    color: {{ block.settings.button_text_hover_color }};
    background-color: {{ block.settings.button_bg_hover_color }};
    border-color: {{ block.settings.button_border_hover_color }};
    }

  {%- endcase -%}
  {%- endfor -%}

{%- endstyle -%}
{%- endcapture -%}

