{%- capture html -%}
<div class="banner-area"  id="section-{{ section.id }}" data-section="BannerSection">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide {% elsif section.settings.container_width == 'no_gap' %} container-fluid p-0 {% endif %}">
    <div class="row {% if section.settings.container_width == 'no_gap' %} no-gutters {% endif %}">
      {%- for block in section.blocks -%}

      {%- capture bannerimage -%}
      {% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/860x750{% endif %}
      {%- endcapture -%}
      {%- assign image_widths = '180,360,540,720,900,1080,1296,1512,1728,1944,2160,2376,2592,2808,3024' | split: ',' -%}
      
      {%- case block.type -%}
      {%- when 'banner' -%}
      <div class="col-md-{{ block.settings.banner_coloum }}">
        <div class="banner-box banner-type-5 banner-hover-3 mb-30 {% if section.settings.section_snow_effect %}snow--section-effect {% endif %}">
          <div class="banner-inner">
            <div class="banner-image img_rel" style="padding-top:{{ 1 | divided_by: block.settings.banner_img.aspect_ratio | times: 100}}%;">
              {%- if block.settings.banner_button_url != blank -%}
              <a href="{{ block.settings.banner_button_url }}">
                {%- if block.settings.banner_img != blank -%}
                {%- render 'lazyload_aspect_ratio' with image: block.settings.banner_img -%}
                {%- else -%}
                {%- render 'svg_placholder' with param: 'image', size: '800x600' -%}
                {%- endif -%}
              </a>
              {%- else -%}
                {%- if block.settings.banner_img != blank -%}
                {%- render 'lazyload_aspect_ratio' with image: block.settings.banner_img -%}
              
                {%- else -%}
                	{%- render 'svg_placholder' with param: 'image', size: '800x600' -%}
                {%- endif -%}
              {%- endif -%}
            </div>

            {% if block.settings.banner_button != blank or block.settings.banner_subtitle != blank or block.settings.banner_title != blank or block.settings.banner_description != blank %}
            <div class="banner-info banner-1">
              <div class="banner-info--inner">
                {%- if block.settings.banner_subtitle != blank -%}
                <p class="banner-title-1 lts-10 lts-xs-0 font-bold text-uppercase">{{ block.settings.banner_subtitle }}</p>
                {%- endif -%}

                {%- if block.settings.banner_first_title != blank or block.settings.banner_last_title -%}
                <p class="banner-title-4 mtb--10">
                  {%- if block.settings.banner_first_title != blank -%}
                  <span>{{ block.settings.banner_first_title }}</span>
                  {%- endif -%}
                  {%- if block.settings.banner_last_title != blank -%}
                  <span>{{ block.settings.banner_last_title }}</span>
                  {%- endif -%}
                </p>
                {%- endif -%}
                {%- if block.settings.banner_description != blank -%}
                <p class="banner-title-5 mt--10 mb--20"> {{ block.settings.banner_description }}</p>
                {%- endif -%}
              </div>
              {%- if block.settings.banner_button != blank -%}
              <a class="btn btn-medium btn-style-1 btn-bordered mt--30 mt-lg--10" href="{{ block.settings.banner_button_url }}">{{ block.settings.banner_button }}</a>
			  {%- endif -%}
            </div>
            {%- endif -%}
            {%- if block.settings.banner_button != '' -%}
            <a class="banner-link banner-overlay" href="{{ block.settings.banner_button_url }}">{{ block.settings.banner_button }}</a>
            {% endif %}
          </div>
        </div>
      </div>

      {%- when 'banner-2' -%}
      <div class="col-md-{{ block.settings.banner_coloum_2 }}">
        <div class="banner-box banner-type-5 banner-hover-3 mb-30 {% if section.settings.section_snow_effect %}snow--section-effect {% endif %}">
          <div class="banner-inner">
            <div class="banner-image img_rel" style="padding-top:{{ 1 | divided_by: block.settings.banner_img_2.aspect_ratio | times: 100}}%;">
              {%- if block.settings.banner_button_url_2 != blank -%}
              <a href="{{ block.settings.banner_button_url_2 }}">
                {%- if block.settings.banner_img_2 != blank -%}
                {%- render 'lazyload_aspect_ratio' with image: block.settings.banner_img_2 -%}
                {%- else -%}
                {%- render 'svg_placholder' with param: 'image', size: '800x600' -%}
                {%- endif -%}
              </a>
              {%- else -%}
                {%- if block.settings.banner_img_2 != blank -%}
              	 {%- render 'lazyload_aspect_ratio' with image: block.settings.banner_img_2 -%}
                {%- else -%}
                	{%- render 'svg_placholder' with param: 'image', size: '800x600' -%}
                {%- endif -%}
              {%- endif -%}
           </div>
            
            
            {% if block.settings.banner_button_2 != '' or block.settings.banner_subtitle_2 != '' or block.settings.banner_title_2 != '' or block.settings.banner_description_2 != '' %}
            <div class="banner-info  banner-2">
              <div class="banner-info--inner">
                
                {%- if block.settings.banner_subtitle_2 != blank -%}
                <p class="banner-title-6">{{ block.settings.banner_subtitle_2 }}</p>
                {%- endif -%}

                {%- if block.settings.banner_title_2 != blank -%}
                <p class="heading-bigger color--white text-capitalize">{{ block.settings.banner_title_2 }}</p>
                {%- endif -%}

                {%- if block.settings.banner_description_2 != blank -%}
                <p class="banner-title-1 lts-10 lts-xl-1 text-uppercase font-weight-700 mb--20">{{ block.settings.banner_description_2 }}</p>
                {%- endif -%}
              </div>
              {%- if block.settings.banner_button_2 != blank -%}
              <a class="btn btn-medium btn-style-1 btn-bordered mt--30 mt-lg--10" href="{{ block.settings.banner_button_url_2 }}">{{ block.settings.banner_button_2 }}</a>
			  {%- endif -%}
              
            </div>
            {% endif %}
            {% if block.settings.banner_button_2 != '' %}
            <a class="banner-link banner-overlay" href="{{ block.settings.banner_button_url_2 }}">{{ block.settings.banner_button_2 }}</a>
            {% endif %}
          </div>
        </div>
      </div>
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>
