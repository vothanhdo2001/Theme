{%- capture html -%}
{% if section.settings.section_enable %}
<div id="section-{{ section.id }}" class="mt-100 mb-100 mt-sm-80 mb-sm-80" data-section="BannerSection">

  {% if section.settings.section_title_enable  %}  
  <div class="section-title-container mb-80 mb-sm-40">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!--=======  section title  =======-->

          <div class="section-title section-title--one text-center">

            {% if section.settings.section_title != blank %}
            <h1>{{ section.settings.section_title }}</h1>
            {% endif %}

            {% if section.settings.section_subtitle  != blank %}
            <p class="subtitle subtitle--deep mb-0">{{ section.settings.section_subtitle }}</p>
            {% endif %}
          </div>
        </div>

        <!--=======  End of section title  =======-->
      </div>
    </div>
  </div>
  {% endif %}
  <div class="about-page-content mb-sm-45">
    <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide {% endif %}">

      <div class="row">

        <div class="col-12 col-lg-{{ section.settings.img_lg_col }} col-md-{{ section.settings.img_md_col }}  mb-md-50 mb-sm-50">
          <!--=======  about page 2 image  =======-->

          {%- capture bannerSrcset -%}
          {% if section.settings.about_img != blank -%}  data-srcset="{%- render 'layload_datasrc', datascrc: section.settings.about_img, dataimgsize: '845x500' -%}"{%- endif %} 
      	  {%- endcapture -%} 
          
          <div class="about-page-2-image">
            {%- if section.settings.about_img != blank -%}
                {%- render 'lazyload_image_src',
                	  image: section.settings.about_img,
                      size: '845x500' -%}
                {%- else -%}
                {%- render 'svg_placholder' with param: 'image', size: '845x500' -%}
                {%- endif -%}
           </div>

        </div>

        <div class="offset-xl-{{ section.settings.content_offset_xl_col }} col-xl-{{ section.settings.content_xl_col }} col-lg-{{ section.settings.content_lg_col }} col-md-{{ section.settings.content_md_col }} mb-sm-50">

          {% if section.settings.about_description != blank %}
          <div class="about-page-text">
            <p class=" mb-35">{{ section.settings.about_description }}</p>
          </div>
          {% endif %}


          {% if section.settings.address_title != blank or section.settings.address_content != blank %}
          <div class="phoone-widget phoone-widget--about mb-35">
            {% if section.settings.address_title != blank %}
            <h2 class="widget-title mb-25">{{ section.settings.address_title }}</h2>
            {% endif %}
            {% if section.settings.address_content != blank %}
            <p class="widget-content">{{ section.settings.address_content }}</p>
            {% endif %}
          </div>
          {% endif %}

          {%- if section.settings.phone_title != blank or section.settings.phone_content != blank -%}
          <div class="phoone-widget phoone-widget--about mb-35">
            {% if section.settings.phone_title != blank %}
            <h2 class="widget-title mb-25">{{ section.settings.phone_title }}</h2>
            {% endif %}
            {% if section.settings.phone_content != blank %}
            <p class="widget-content">{{ section.settings.phone_content }}</p>
            {% endif %}
          </div>
          {%- endif -%}

          {% if section.settings.email_title != blank or section.settings.email_content != blank %}
          <div class="phoone-widget phoone-widget--about">
            {% if section.settings.email_title != blank %}
            <h2 class="widget-title mb-25">{{ section.settings.email_title }}</h2>
            {% endif %}
            {% if section.settings.email_content != blank %}
            <p class="widget-content">{{ section.settings.email_content }}</p>
            {% endif %}
          </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>

  
</div>
{% endif %}
{%- endcapture -%}
