{%- capture html -%}
<div class="blog-post-area slick-carousel-js" id="section-{{ section.id }}" data-section="BlogPostSliderJs">
  <div class="{% if section.settings.container_width == 'container' %} container {% elsif section.settings.container_width == 'fluid' %} container wide  {%- endif -%}">
      {% capture data_slick_activation %}
        data-slick='{
        "slidesToShow": {{ section.settings.slide_items_show }},
        "slidesToScroll": {{ section.settings.slide_items_show }},
        "arrows": {{ section.settings.navigation_enable }},
        {% if settings.rtl_enable %}                
        "rtl": true,
        {% endif %}
        "autoplay": {{ section.settings.autoplay_true }},
        "autoplaySpeed": 5000,
        "speed": 1000,
        "responsive":[
          {"breakpoint":1501, "settings": {"slidesToShow": {{ section.settings.slide_items_show }}} },
          {"breakpoint":1199, "settings": {"slidesToShow": {{ section.settings.items_more_than_1200 }} } },
          {"breakpoint":991, "settings": {"slidesToShow": {{ section.settings.items_more_than_992 }}, "arrows": false} },
          {"breakpoint":767, "settings": {"slidesToShow": {{ section.settings.items_more_than_768 }}, "arrows": false} },
          {"breakpoint":575, "settings": {"slidesToShow": {{ section.settings.items_more_than_480 }}, "arrows": false} },
          {"breakpoint":479, "settings": {"slidesToShow": {{ section.settings.items_more_than_320 }}, "arrows": false} }
        ]}'
      
      {% endcapture %}

    {% if section.settings.latest_blog_style == 'b_style_1' %}
    <div class="row align-items-center nrb">
      {% if section.settings.section_title_enable %}
      <div class="col-lg-3 mb-50 mb-lg-0">
        <!--=======  blog intro  =======-->
        <div class="blog-intro {% if section.settings.text_align == "left" %}text-left {% elsif section.settings.text_align == "right" %} text-right {% elsif section.settings.text_align == "center" %} text-center {% endif %}">
          {% if section.settings.section_title != blank %}
          <h2>{{ section.settings.section_title }} </h2>
          {% endif %}
          {% if section.settings.section_description != blank %}
          <p>{{ section.settings.section_description }}</p>
          {% endif %}
          {% if section.settings.section_btn_text != blank %}
          <a href="{{ section.settings.section_btn_link }}" class="phoone-button phoone-button--medium">{{ section.settings.section_btn_text }}</a>
          {% endif %}
        </div>
        <!--=======  End of blog intro  =======-->
      </div>
      {% endif %}
      <div class="{% if section.settings.section_title_enable %} col-lg-9 {% else %} col-12 {% endif %}">
        
        <div class="blog-post-slider-container">
          <div class="blog-post-slider" {{ data_slick_activation }}>
            <!-- product-item start -->
            {% assign blog = blogs[section.settings.blog_handle] %}
            {% assign blog_limit = section.settings.blog_limit_handle %}

            {%- if blog == empty -%}
            {%- for i in (1..blog_limit) -%}
            <div class="col">
              <div>
                <div style="background: #f2f2f2;">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
                <br>
                <h6>
                  Blog Post Title
                </h6>
              </div>
            </div>
            {%- endfor -%}
            {%- else -%}
            {% for article in blog.articles limit: blog_limit %}
            <div class="col">
              {% render 'latest_post_grid' with article as article %}
            </div>
            {% endfor %}
            {%- endif -%}
          </div>
        </div>
        <!--=======  End of blog post slider container  =======-->
      </div>
    </div>
    {% elsif section.settings.latest_blog_style == 'b_style_2' %}
    <div class="blog_grid_2">
       {% if section.settings.section_title_enable %}
          {% if section.settings.section_title != blank or section.settings.section_description != blank   %}
