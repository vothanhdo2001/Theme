{%- capture html -%}
<div class="rich-text {% if section.settings.text_align == "left" %}text-left {% elsif section.settings.text_align == "right" %} text-right {% elsif section.settings.text_align == "center" %} text-center {% endif %}" id="section-{{ section.id }}">
  {% if section.settings.section_title != '' %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
        </div>
      </div>
    </div>
  </div>
  <br>
  {% endif %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="rich-text-content">
          {{ section.settings.rich_text_handle }}
        </div>
      </div>
    </div>	
  </div>
</div>
{%- endcapture -%}
{{ html | strip_newlines | replace:'	','' | replace:'    ','' | replace:'  ',' ' }}


{%- render 'section_typography' -%}

{%- capture css -%}
<style>

  {%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'section_color' -%}
    #section-{{ section.id }}.rich-text .section-title h2 {
      color: {{ block.settings.section_title_color }};
    }
    #section-{{ section.id }} .rich-text-content p{
      color: {{ block.settings.section_content_color }};
    }
  {%- endcase -%}
  {%- endfor -%}
</style>
{%- endcapture -%}

{{ css | strip_newlines
       | replace: '  ', '' 
       | replace: ': ', ':'
       | replace: ' {', '{'
}}

