{%- capture html -%}
{%- assign isset = section.settings -%}
<div class="black-amazing-deal" id="section-{{ section.id }}">
  <div class="container-fluid">
    <div class="black-collection-content text-center">
      {%- if isset.gift_banner_content != blank -%}
      <h4>{{ isset.gift_banner_content }}</h4>
      {%- endif -%}

      {%- if isset.gift_banner_btn != blank -%}
      <a class="collection-btn" href="{{ isset.gift_banner_btn_link }}">{{ isset.gift_banner_btn }}</a>
      {%- endif -%}
    </div>  
  </div>
</div>
{%- endcapture -%}
{{ html | strip_newlines | replace:'	','' | replace:'    ','' | replace:'  ',' ' }}

{%- render 'section_typography' -%}

{%- capture css -%}
{%- if isset.html_content_css != '' -%}
<style>
  {{ isset.html_content_css }}
</style>
{%- endif -%}
{%- endcapture -%}

{{ css | strip_newlines
       | replace: '  ', '' 
       | replace: ': ', ':'
       | replace: ' {', '{'
}}


