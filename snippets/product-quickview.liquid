{% capture html %}
<div class="modal fade productModal" id="quickViewModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <i class="fa fa-times"></i>
        </button>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-5 col-md-5 col-12">
            <div class="qwick-view-left">
              <div class="quick-view-learg-img">
                <div class="quick-view-tab-content tab-content">
                  <div class="product-main-image__item">
                    <div class="img_box_1"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-7 col-md-7 col-12">
            <div class="qwick-view-right">
              <div class="qwick-view-content">
                <h1 class="product_title">FROM_JS</h1>
                <div class="product-price product-info__price price-part">
                  <span class="main">jsprice</span>
                  <span class="price-box__new">jsprice</span>
                </div>
                <div class="product-rating spr-badge-caption-none">
                  <div class="quick-view-rating rating">FROM_JS</div>
                </div>

                <div class="short-description product-des">FROM_JS</div>

                <form id="add-item-qv" action="/cart/add" method="post">
                  <div class="quick-view-select variants select-option-part"></div>
                  <div class="quickview-plus-minus">
                    <div class="cart-plus-minus">
                      <input type="text" value="01" name="quantity" class="cart-plus-minus-box">
                    </div>
                    <div class="quickview-btn-cart">
                      <button type="submit" class="addtocartqv phoone-button phoone-button--small">{{ settings.qcv_add_to_cart_text }}</button>
                    </div>
                  </div>
                  <script>
                    jQuery('.addtocartqv').click(function(e) {
                      e.preventDefault();
                      Shopify.addItemFromFormStart('add-item-qv', jQuery(this).attr('id'));
                    });
                  </script> 
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            {%- if settings.social_share_enable -%}
            <div class="product_social_share text-center">
              {%- if settings.product_share_title != blank  -%} 
              <h4>{{ settings.product_share_title }}</h4>
              {%- endif -%}
              {%- render 'social-share' -%}
            </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="quickViewModal_info" style="display: none;">
  <div class="button">{{ settings.qcv_add_to_cart_text }}</div>
  <div class="button_added">{{ settings.qcv_cart_added_text }}</div>
  <div class="button_error">{{ settings.qcv_cart_error_text }}</div>
  <div class="button_wait">{{ settings.qcv_cart_wait_text }}</div>
</div>
{% endcapture %}
