{%- capture html -%}
<!-- BREADCRUMBS SETCTION START -->
{%- if template.name == "collection" and settings.collection_page_title_bar -%}
<div class="breadcrumb-area overlay-bg" style="background: {{ settings.breadcrumb_banner_bg }} {% if collection.image.src and settings.collection_img_enable %} url('{{ collection.image.src | collection_img_url: 'master' }}') no-repeat scroll center center / cover {%- endif -%}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 {% if settings.text_align == "left" %}text-left {% elsif settings.text_align == "right" %} text-right {% elsif settings.text_align == "center" %} text-center {% endif %}">
        {%- if settings.collection_page_title -%}
         <h2 class="breadcrumb-title">{{ collection.title }}</h2>
        {%- endif -%}
        {% if collection.description != blank and settings.collection_page_description %} 
         <p class="collection_page_description">{{ collection.description }}</p>
        {%- endif -%}
        {%- if settings.breadcrumb_enable_from_collection -%}
        {%- render 'breadcrumb-builtin' -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- else -%}
{%- if settings.breadcrumb_banner_enable -%}
<div class="breadcrumb-area bg-img overlay-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 {% if settings.text_align == "left" %}text-left {% elsif settings.text_align == "right" %} text-right {% elsif settings.text_align == "center" %} text-center {% endif %}">
        {%- if settings.page_title_enable -%}
        <h1 class="breadcrumb-title">{{ page_title }}</h1>
        {%- endif -%}
        {%- if settings.breadcrumb_enable -%}
        {%- render 'breadcrumb-builtin' -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- endif -%}
{%- endif -%}
{% endcapture %}
{{ html | strip_newlines | replace:'	','' | replace:'    ','' | replace:'  ',' ' }}