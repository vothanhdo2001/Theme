{% if section.settings.section_title_enable %}
<div class="section-title-container {% if section.settings.banner_style == "grid_mode" %} mb-50 mb-md-30 mb-sm-30 {% else %} mb-70 mb-md-50 mb-sm-50 {% endif %}" >
  <div class="container">
    <div class="row mb-75">
      <div class="col-6">
        <div class="section-title__label section-title__label-style2 section-title__label--left section-title__label-style3--left">
          <p>{{ section.settings.collection_section_subtitle }} <span class="line">{{ section.settings.collection_count }}</span></p>
        </div>
      </div>

      {% if section.settings.collection_section_description != blank %}
      <div class="col-6 text-right">
        <div class="section-title__label  section-title__label-style2 section-title__label--right section-title__label-style3--right">
          <p>{{ section.settings.collection_section_description }}</p>
        </div>
      </div>
      {% endif %}

    </div>
    
    {% if section.settings.collection_section_title != blank %}
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title section-title--one text-center">
          <h1>{{ section.settings.collection_section_title }}</h1>
        </div>
      </div>
    </div>
    {% endif %}
    
  </div>
</div>
{% endif %}
